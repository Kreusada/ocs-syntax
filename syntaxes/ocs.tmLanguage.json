{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "scopeName": "source.ocs",
    "name": "OceanScript",
    "comment": "Syntax highlighting support for OceanScript.",
    "fileTypes": [
        "ocs", 
        "ocean"
    ],
    "patterns": [
        {
            "match": "\\^|~|_",
            "name": "storage.type.oceanscript"
        },
        {
            "match": ">|-|<",
            "name": "string.oceanscript"
        },
        {
            "match": "\\+|-",
            "name": "keyword.operator.arithmetic.oceanscript"
        },
        {
            "match": "\\.",
            "name": "entity.name.function.io.oceanscript"
        },
        {
            "match": "\\*.+\\*",
            "name": "comment.oceanscript"
        },
        {
            "match": "^\\$.*",
            "name": "comment.block.oceanscript"
        }
    ]
}